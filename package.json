{
    "name": "bookshop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js-community/odata-v2-adapter": "^1.11.8",
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3",
        "express": "^4",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.108.18",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "cds_watch": "cds watch",
        "start": "cds-serve",
        "watch-bookshop_fiori": "cds watch --open bookshop_fiori/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "cov2ap": {
            "plugin": true
        },
        "requires": {
            "db": {
                "kind": "sql"
            },
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                },
                "auth": {
                    "kind": "xsuaa"
                }
            },
            "auth": "xsuaa"
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/bookshop_fiori"
    ]
}
